<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="coid.moonlay.pickupondemand.jet.fragment.OldDeliveryDetailFragment">

    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackgroundSecondary"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorTextSecondary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorTextSecondary"/>

        <LinearLayout
            android:id="@+id/ll_status_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                android:id="@+id/btn_failed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/extra_small"
                android:layout_marginEnd="@dimen/extra_small"
                android:layout_marginBottom="@dimen/small"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginStart="@dimen/medium"
                android:background="@drawable/custom_bg_rounded_square_disabled_fill"
                android:drawableLeft="@drawable/ic_thumbs_down"
                android:drawableStart="@drawable/ic_thumbs_down"
                android:drawablePadding="@dimen/small"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/delivery_failed"/>
            <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                android:id="@+id/btn_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/medium"
                android:layout_marginEnd="@dimen/medium"
                android:layout_marginBottom="@dimen/small"
                android:layout_marginLeft="@dimen/extra_small"
                android:layout_marginStart="@dimen/extra_small"
                android:background="@drawable/custom_bg_rounded_square_red_fill"
                android:drawableLeft="@drawable/ic_thumbs_up"
                android:drawableStart="@drawable/ic_thumbs_up"
                android:drawablePadding="@dimen/small"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/delivery_success"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ll_contact_single_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom_container"
        android:background="@color/colorPanelPrimary">
        <Button
            android:id="@+id/btn_contact_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium"
            android:layout_marginRight="@dimen/medium"
            android:layout_marginBottom="@dimen/small"
            android:background="@drawable/custom_bg_rounded_square_black_fill"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorTextPrimary"
            android:text="@string/task_contact"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ll_contact_single_container"
        android:background="@color/colorPanelPrimary"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium"
                android:background="@color/colorBackgroundPrimary"
                android:textAllCaps="true"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_large"
                android:text="DELIVERY"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextSecondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/medium"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecondary"
                    android:text="Nama Penerima"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="Patricia Aviani"/>
                <TextView
                    android:id="@+id/tv_label_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="Alamat Penerima"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="Equity Tower 25TH floor, SCBD lot 9, \nJl. Jend. Sudirman kav.52 - 53"/>
                <TextView
                    android:id="@+id/tv_label_address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="Detail Alamat Penerima"/>
                <TextView
                    android:id="@+id/tv_address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="-"/>
                <TextView
                    android:id="@+id/tv_label_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="Telepon Penerima"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="+62 819 1982 9879"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextSecondary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medium"
                android:paddingTop="@dimen/medium"
                android:paddingRight="@dimen/medium"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecondary"
                    android:text="Rincian Biaya Pengiriman"/>
                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="COD_BO"/>
                <LinearLayout
                    android:id="@+id/ll_cod_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorTextSecondary"
                            android:text="Ongkos kirim"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/text_size_medium_large"
                                android:text="@string/currency"/>
                            <TextView
                                android:id="@+id/tv_delivery_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/extra_small"
                                android:layout_marginStart="@dimen/extra_small"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/text_size_medium_large"
                                android:text="20,000,000"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorTextSecondary"
                            android:text="Harga barang"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/text_size_medium_large"
                                android:text="@string/currency"/>
                            <TextView
                                android:id="@+id/tv_item_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/extra_small"
                                android:layout_marginStart="@dimen/extra_small"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/text_size_medium_large"
                                android:text="20,000,000"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/small"
                    android:background="@color/colorTextSecondary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:textStyle="bold"
                        android:text="Total"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:textStyle="bold"
                            android:text="@string/currency"/>
                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/extra_small"
                            android:layout_marginStart="@dimen/extra_small"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:textStyle="bold"
                            android:text="40,000,000"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
