<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent"
    tools:context="coid.moonlay.pickupondemand.jet.fragment.LoginFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_small"
        android:src="@drawable/logo_jet_express"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/larger"
        android:paddingTop="@dimen/large"
        android:paddingRight="@dimen/larger"
        android:focusableInTouchMode="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/medium"
                android:hint="@string/username"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_username_white"
                android:drawableStart="@drawable/ic_username_white"
                android:drawablePadding="@dimen/medium"
                android:textSize="@dimen/text_size_normal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@android:color/white">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/medium"
                android:hint="@string/password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_password_white"
                android:drawableStart="@drawable/ic_password_white"
                android:drawablePadding="@dimen/custom_login_password_drawable_padding"
                android:textSize="@dimen/text_size_normal"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/forgot_your_login_details"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium"
            android:background="@drawable/custom_bg_rounded_square_red_fill_shadow"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium"
            android:visibility="gone">
            <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                android:id="@+id/btn_facebook_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_bg_rounded_square_light_transparent_white_bordered"
                android:drawableLeft="@drawable/ic_facebook"
                android:drawableStart="@drawable/ic_facebook"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"/>
            <View
                android:layout_width="@dimen/extra_small"
                android:layout_height="0dp"/>
            <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                android:id="@+id/btn_google_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_bg_rounded_square_light_transparent_white_bordered"
                android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
                android:drawableStart="@drawable/common_google_signin_btn_icon_light"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"/>
        </LinearLayout>

