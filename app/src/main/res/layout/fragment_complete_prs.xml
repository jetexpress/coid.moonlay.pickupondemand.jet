<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coid.moonlay.pickupondemand.jet.fragment.ProofOfDeliveryFragment">

    <LinearLayout
        android:id="@+id/ll_bottom_container_prs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackgroundSecondary"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorTextSecondary"/>
        <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
            android:id="@+id/btn_finish_prs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:layout_marginRight="@dimen/medium"
            android:layout_marginBottom="@dimen/small"
            android:layout_marginLeft="@dimen/medium"
            android:background="@drawable/custom_bg_rounded_square_red_fill"
            android:drawableLeft="@drawable/ic_check_mark"
            android:drawableStart="@drawable/ic_check_mark"
            android:drawablePadding="@dimen/small"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/delivery_finish"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ll_bottom_container_prs"
        android:background="@color/colorPanelPrimary"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_run_sheet_jetid_name"/>

            <TextView
                android:id="@+id/tv_jetid_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium_large"
                android:text="TRAVELMADEZY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_run_sheet_outlet_address"
                android:layout_marginTop="@dimen/extra_small"/>

            <TextView
                android:id="@+id/tv_jetid_address_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium_large"
                android:text="Equity Tower 25TH floor, SCBD lot 9, \nJl. Jend. Sudirman kav.52 - 53"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_run_sheet_schedule"
                android:layout_marginTop="@dimen/extra_small"/>

            <TextView
                android:id="@+id/tv_jetid_schedule_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium_large"
                android:text="Minggu, 13:00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_run_sheet_total_pickup"
                android:layout_marginTop="@dimen/extra_small"/>

            <EditText
                android:id="@+id/et_jetid_totalpickup_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium_large"
                android:inputType="number"
                android:backgroundTint="@color/colorTextPrimary"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_signature_prs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small">
                <LinearLayout
                    android:id="@+id/ll_signature_prs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_medium"
                        android:text="@string/proof_of_delivery_signature"/>
                    <RelativeLayout
                        android:id="@+id/rl_signature_container_prs"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/small"
                        android:background="@android:color/white">
                        <ImageView
                            android:id="@+id/img_signature_prs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="Foto"
                android:layout_marginTop="@dimen/extra_small"/>
            <Button
                android:id="@+id/btn_upload_prs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textColor="@color/colorTextPrimary"
                android:background="@drawable/custom_bg_rounded_square_red_fill"/>
            <RelativeLayout
                android:id="@+id/rl_photo_prs_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_small"
                android:layout_marginTop="@dimen/small"
                android:background="@android:color/transparent">
                <ImageView
                    android:id="@+id/img_photo_prs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
