<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PickupItemDetailFragment">

    <RelativeLayout
        android:id="@+id/rl_four_digit_pickup_item_code_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@color/colorBackgroundPrimary">
        <LinearLayout
            android:id="@+id/ll_top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_barcode_white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:layout_marginStart="@dimen/small"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/pickup_item_enter_last_four_digit"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/et_four_last_digit_pickup_item_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/CustomEditText"
                        android:layout_marginTop="@dimen/extra_small"
                        android:inputType="textCapCharacters"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"/>
                    <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                        android:id="@+id/btn_submit_four_digit_pickup_item_code"
                        android:layout_width="@dimen/extra_large"
                        android:layout_height="@dimen/large"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginStart="@dimen/small"
                        android:background="@color/colorPrimary"
                        android:drawableLeft="@drawable/ic_check_mark"
                        android:drawableStart="@drawable/ic_check_mark"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mid_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_top_container"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/or"/>
            <TextView
                android:id="@+id/tv_add_pickup_item_using_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:paddingTop="@dimen/small"
                android:paddingRight="@dimen/medium"
                android:paddingBottom="@dimen/small"
                android:paddingLeft="@dimen/medium"
                android:gravity="center"
                android:drawableTop="@drawable/ic_qr_code"
                android:drawablePadding="@dimen/small"
                android:textAllCaps="true"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_item_unlock_using_qr_code"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_mid_container"
            android:layout_centerInParent="true"
            android:padding="@dimen/extra_large"
            android:gravity="center"
            android:drawableTop="@drawable/ic_warning"
            android:drawablePadding="@dimen/medium"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_medium_large"
            android:text="@string/pickup_item_unlock_warning"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorTextSecondary"/>

        <LinearLayout
            android:id="@+id/ll_estimated_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small"
            android:paddingRight="@dimen/medium"
            android:paddingBottom="@dimen/small"
            android:paddingLeft="@dimen/medium"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium_large"
                android:text="@string/pickup_item_estimated_price"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extra_small"
                android:layout_marginStart="@dimen/extra_small"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_small"
                android:text="@string/pickup_item_view_detail"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small"
                    android:layout_marginStart="@dimen/small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="@string/currency"/>
                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_marginStart="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorTextSecondary"/>

        <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:layout_marginRight="@dimen/medium"
            android:layout_marginBottom="@dimen/small"
            android:layout_marginLeft="@dimen/medium"
            android:background="@drawable/custom_bg_rounded_square_red_fill"
            android:drawableLeft="@drawable/ic_check_mark"
            android:drawableStart="@drawable/ic_check_mark"
            android:drawablePadding="@dimen/small"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/save"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ll_bottom_container"
        android:background="@color/colorBackgroundPrimary"
        android:scrollbars="none"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/pickup_item_consignee_info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="@string/pickup_item_consignee_name"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="@string/pickup_item_consignee_address"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="@string/pickup_item_consignee_address_detail"/>
                <TextView
                    android:id="@+id/tv_address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_consignee_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColorHint="@color/colorTextSecondary">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_consignee_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/waybill_consignee_choose_location"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_spinner_down"
                        android:drawableEnd="@drawable/ic_spinner_down"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:text="Malang, Jawa Timur"
                        android:theme="@style/CustomEditText"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mockup_img_history_map"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/pickup_item_detail"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/small"-->
                    <!--android:textColor="@color/colorTextSecondary"-->
                    <!--android:text="@string/pickup_item_weight"/>-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColorHint="@color/colorTextSecondary">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_weight"
                        android:layout_width="@dimen/layout_medium"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:digits="0123456789.,"
                        android:selectAllOnFocus="true"
                        android:hint="@string/pickup_item_weight"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:theme="@style/CustomEditText"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="@string/pickup_item_dimension"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_length"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorTextSecondary">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_length"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/CustomEditText"
                            android:layout_marginTop="@dimen/extra_small"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:hint="@string/pickup_item_length"
                            android:textColorHint="@color/colorTextSecondary"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/text_size_medium_large"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small"
                        android:layout_gravity="bottom"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:text="x"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_width"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorTextSecondary">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_width"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/CustomEditText"
                            android:layout_marginTop="@dimen/extra_small"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:hint="@string/pickup_item_width"
                            android:textColorHint="@color/colorTextSecondary"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/text_size_medium_large"/>
                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small"
                        android:layout_gravity="bottom"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:text="x"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/colorTextSecondary">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/CustomEditText"
                            android:layout_marginTop="@dimen/extra_small"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:hint="@string/pickup_item_height"
                            android:textColorHint="@color/colorTextSecondary"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/text_size_medium_large"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_volume_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextSecondary"
                    android:text="@string/pickup_item_volume"/>
                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="0 cm"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColorHint="@color/colorTextSecondary">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/CustomEditText"
                        android:layout_marginTop="@dimen/extra_small"
                        android:focusable="false"
                        android:hint="@string/pickup_item_product"
                        android:drawableRight="@drawable/ic_spinner_down"
                        android:drawableEnd="@drawable/ic_spinner_down"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_packaging_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColorHint="@color/colorTextSecondary">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_packaging_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/CustomEditText"
                        android:layout_marginTop="@dimen/extra_small"
                        android:focusable="false"
                        android:hint="@string/pickup_item_packaging"
                        android:drawableRight="@drawable/ic_spinner_down"
                        android:drawableEnd="@drawable/ic_spinner_down"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"/>
                </android.support.design.widget.TextInputLayout>
                <CheckBox
                    android:id="@+id/checkbox_insured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="@string/pickup_item_insurance"
                    android:theme="@style/CheckboxPrimary"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_item_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColorHint="@color/colorTextSecondary"
                    android:visibility="gone">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_item_value"
                        android:layout_width="@dimen/layout_medium"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:digits="0123456789.,"
                        android:selectAllOnFocus="true"
                        android:hint="@string/pickup_item_value"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:theme="@style/CustomEditText"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:textColorHint="@color/colorTextSecondary">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:maxLines="5"
                        android:hint="@string/pickup_item_description"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:theme="@style/CustomEditText"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
