<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_reveal_layout_task_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPanelPrimary"
    app:dragEdge="right"
    app:mode="same_level">

    <!-- Your secondary layout here -->
    <FrameLayout
        android:id="@+id/fl_reject_task_item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/medium"
            android:paddingRight="@dimen/medium"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorPrimary">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reject"/>
            <TextView
                android:id="@+id/tv_reject_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="@string/pickup_reject"/>

        </LinearLayout>
    </FrameLayout>

    <!-- Your main layout here -->
    <LinearLayout
        android:id="@+id/ll_main_task_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPanelPrimary">
        <ImageView
            android:id="@+id/img_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/medium"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/medium"
            android:paddingLeft="@dimen/medium"
            android:paddingStart="@dimen/medium"
            android:src="@drawable/ic_delivery_white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_task_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="WAYBILL NO - "/>
                <TextView
                    android:id="@+id/tv_task_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:text="2033478695"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_drs_code_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:text="DRS NO - "/>
                <TextView
                    android:id="@+id/tv_drs_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_marginStart="@dimen/extra_small"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:text="2033478695"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small"
                android:maxLines="1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_medium"
                android:text="Equity Tower 25TH floor, SCBD lot 9, Jl. Jend. Sudirman kav.52 - 53"/>
            <LinearLayout
                android:id="@+id/ll_payment_method_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_small"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/colorInfoCOD"
                    android:text="Cash On Delivery"/>
                <LinearLayout
                    android:id="@+id/ll_payment_fee_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:maxLines="1"
                        android:textColor="@color/colorInfoCOD"
                        android:text=" : "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:maxLines="1"
                        android:textColor="@color/colorInfoCOD"
                        android:text="@string/currency"/>
                    <TextView
                        android:id="@+id/tv_payment_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:textColor="@color/colorInfoCOD"
                        android:text="20,000,000"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small"
                android:maxLines="1"
                android:textColor="@color/colorInfo"
                android:text="Alamat tidak lengkap / salah"/>
        </LinearLayout>
    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
