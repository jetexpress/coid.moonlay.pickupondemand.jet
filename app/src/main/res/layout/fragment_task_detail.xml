<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coid.moonlay.pickupondemand.jet.fragment.TaskDetailFragment">

    <include layout="@layout/basic_layout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"/>

    <!-- CONTENT -->
    <RelativeLayout
        android:id="@+id/rl_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ll_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackgroundSecondary"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextSecondary"/>

            <LinearLayout
                android:id="@+id/ll_button_group_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/medium"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_cancel"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/task_cancel"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorTextSecondary"/>
                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/medium"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_contact"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/task_contact"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorTextSecondary"/>
                <TextView
                    android:id="@+id/tv_navigation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/medium"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_navigation"
                    android:textColor="@color/colorTextPrimary"
                    android:text="@string/task_navigation"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTextSecondary"/>

            <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                android:id="@+id/btn_start_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/medium"
                android:layout_marginBottom="@dimen/small"
                android:layout_marginLeft="@dimen/medium"
                android:background="@drawable/custom_bg_rounded_square_red_fill"
                android:drawableLeft="@drawable/ic_truck"
                android:drawableStart="@drawable/ic_truck"
                android:drawablePadding="@dimen/medium"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_start_trip"
                android:visibility="gone"/>

            <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                android:id="@+id/btn_has_arrived"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/medium"
                android:layout_marginBottom="@dimen/small"
                android:layout_marginLeft="@dimen/medium"
                android:background="@drawable/custom_bg_rounded_square_red_fill"
                android:drawableLeft="@drawable/ic_truck"
                android:drawableStart="@drawable/ic_truck"
                android:drawablePadding="@dimen/medium"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_has_arrived"
                android:visibility="gone"/>

            <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                android:id="@+id/btn_create_waybill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small"
                android:layout_marginRight="@dimen/medium"
                android:layout_marginBottom="@dimen/small"
                android:layout_marginLeft="@dimen/medium"
                android:background="@drawable/custom_bg_rounded_square_red_fill"
                android:drawableLeft="@drawable/ic_pencil_white"
                android:drawableStart="@drawable/ic_pencil_white"
                android:drawablePadding="@dimen/medium"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/pickup_create_waybill"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_delivery_status_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                    android:id="@+id/btn_failed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/small"
                    android:layout_marginRight="@dimen/extra_small"
                    android:layout_marginEnd="@dimen/extra_small"
                    android:layout_marginBottom="@dimen/small"
                    android:layout_marginLeft="@dimen/medium"
                    android:layout_marginStart="@dimen/medium"
                    android:background="@drawable/custom_bg_rounded_square_disabled_fill"
                    android:drawableLeft="@drawable/ic_thumbs_down"
                    android:drawableStart="@drawable/ic_thumbs_down"
                    android:drawablePadding="@dimen/small"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/delivery_failed"/>
                <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                    android:id="@+id/btn_success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/small"
                    android:layout_marginRight="@dimen/medium"
                    android:layout_marginEnd="@dimen/medium"
                    android:layout_marginBottom="@dimen/small"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_marginStart="@dimen/extra_small"
                    android:background="@drawable/custom_bg_rounded_square_red_fill"
                    android:drawableLeft="@drawable/ic_thumbs_up"
                    android:drawableStart="@drawable/ic_thumbs_up"
                    android:drawablePadding="@dimen/small"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/delivery_success"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_delivery_status_button_container_prs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <coid.moonlay.pickupondemand.jet.custom.CenteredIconButton
                    android:id="@+id/btn_prsjetid_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/small"
                    android:layout_marginRight="@dimen/medium"
                    android:layout_marginEnd="@dimen/medium"
                    android:layout_marginBottom="@dimen/small"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_marginStart="@dimen/extra_small"
                    android:background="@drawable/custom_bg_rounded_square_red_fill"
                    android:drawableLeft="@drawable/ic_thumbs_up"
                    android:drawableStart="@drawable/ic_thumbs_up"
                    android:drawablePadding="@dimen/small"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:text="@string/pickup_run_sheet_pickup"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_contact_single_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_bottom_container"
            android:background="@color/colorPanelPrimary"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_contact_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium"
                android:layout_marginRight="@dimen/medium"
                android:layout_marginBottom="@dimen/small"
                android:background="@drawable/custom_bg_rounded_square_black_fill"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorTextPrimary"
                android:text="@string/task_contact"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/fl_contact_single_container"
            android:background="@color/colorPanelPrimary"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/medium"
                    android:background="@color/colorBackgroundPrimary"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_task_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_large"
                        android:text="PICK UP"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginStart="@dimen/small"
                        android:textColor="@color/colorTextSecondary"
                        android:text="12 min away"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorTextSecondary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorTextSecondary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/medium">

                    <TextView
                        android:id="@+id/tv_label_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pemesan"
                        android:textColor="@color/colorTextSecondary" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:text="Patricia Aviani"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large" />

                    <TextView
                        android:id="@+id/tv_label_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="PIC"
                        android:textColor="@color/colorTextSecondary"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:text="Patricia Aviani"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_label_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="Alamat Pemesan"
                        android:textColor="@color/colorTextSecondary" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:text="Equity Tower 25TH floor, SCBD lot 9, \nJl. Jend. Sudirman kav.52 - 53"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large" />

                    <TextView
                        android:id="@+id/tv_label_address_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="Detail Alamat Pemesan"
                        android:textColor="@color/colorTextSecondary" />

                    <TextView
                        android:id="@+id/tv_address_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:text="Pintu Lobby West"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large" />

                    <TextView
                        android:id="@+id/tv_label_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="Telepon Pemesan"
                        android:textColor="@color/colorTextSecondary" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:text="+62 819 1982 9879"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large" />

                    <TextView
                        android:id="@+id/tv_label_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="Jadwal Pickup"
                        android:textColor="@color/colorTextSecondary"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_schedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:textColor="@color/colorTextPrimary"
                        android:text="Senin, 23:00"
                        android:textSize="@dimen/text_size_medium_large"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_weight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="Berat Barang"
                        android:textColor="@color/colorTextSecondary"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_price_detail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/medium"
                    android:paddingTop="@dimen/medium"
                    android:paddingRight="@dimen/medium"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextSecondary"
                        android:text="@string/task_total_price_break_down_detail"/>
                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium"
                        android:textAllCaps="true"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/text_size_medium_large"
                        android:text="COD_BO"/>
                    <LinearLayout
                        android:id="@+id/ll_cod_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/colorTextSecondary"
                                android:text="@string/task_delivery_fee"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_size_medium_large"
                                    android:text="@string/currency"/>
                                <TextView
                                    android:id="@+id/tv_delivery_fee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/extra_small"
                                    android:layout_marginStart="@dimen/extra_small"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_size_medium_large"
                                    android:text="20,000,000"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/colorTextSecondary"
                                android:text="@string/task_item_value"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_size_medium_large"
                                    android:text="@string/currency"/>
                                <TextView
                                    android:id="@+id/tv_item_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/extra_small"
                                    android:layout_marginStart="@dimen/extra_small"
                                    android:textColor="@color/colorTextPrimary"
                                    android:textSize="@dimen/text_size_medium_large"
                                    android:text="20,000,000"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/small"
                        android:background="@color/colorTextSecondary"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:textStyle="bold"
                            android:text="@string/task_total_price"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/text_size_medium_large"
                                android:textStyle="bold"
                                android:text="@string/currency"/>
                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/extra_small"
                                android:layout_marginStart="@dimen/extra_small"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="@dimen/text_size_medium_large"
                                android:textStyle="bold"
                                android:text="40,000,000"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
